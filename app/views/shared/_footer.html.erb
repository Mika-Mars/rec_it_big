<div class="footer">
    <div class="foot-item dropdown">
      <%= image_tag "https://cdn4.iconfinder.com/data/icons/mono-color-web-mobile/250/Home-512.png", class: "avatar dropdown-toggle", id: "footerDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="footerDropdown">
        <%= link_to "Home", "/", class: "dropdown-item" %>
