    <div class="foot-item dropdown">
      <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/0/06/OOjs_UI_icon_add.svg/1024px-OOjs_UI_icon_add.svg.png", class: "avatar dropdown-toggle", id: "footeraddbtn", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="footerDropdown">
        <%= link_to "Account", "#", class: "dropdown-item" %>
      </div>
    </div>
