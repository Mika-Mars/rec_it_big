<div class="biggy-container">
  <div class="go-back">
    <%= link_to root_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
  </div>
  <div class="pj-list">
    <% @projects.each do |pj| %>
      <%= link_to project_path(pj.id), class: "pj-card" do %>
        <div class="pj-card-title">
          <h3><%= pj.title %></h3>
        </div>
        <div class="pj-card-create">
          <p><%= pj.created_at %></p>
        </div>
        <div class="center">
          <%= link_to projects_path(@project), method: :delete, data: { confirm: "Are you sure you want to remove #{@project.title}"} do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
        <% end %>
    <% end %>
  </div>
</div>
<div class="button-new-project">
  <div id="new-project"><%= icon('fas', 'plus-circle')%></div>
  <%= simple_form_for @project, remote: true do |f| %>
    <div id="form-project" class="containeur-form-project">
      <%= f.input :title, label: "Project's title:", error: 'Title is mandatory, enter one please' %>
      <%= f.button :submit, "Create", class: "btn-create btn btn-success px-5" %>
    </div>
  <% end %>
</div>
