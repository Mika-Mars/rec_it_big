<div class="project_container">
    <div class="project_banner">
        <h2><%= @project.title %></h2>
    </div>

    <div class="modalsong hidden">
      <div>
        <%= @project.title %>
      </div>

      <div>
        <%= simple_form_for(@project) do |f| %>
          <%= f.input :song, as: :file, class:"btn-upload btn px-5" %>
          <%= f.button :submit, "Upload", class:"btn-upload btn px-5" %>
        <% end %>
      </div>
      <% if @project.song.attached? %>
        <%= cl_video_tag @project.song.key,:source_types => [:mp3],:controls => true,:poster => false %>
      <%end%>
    </div>

    <div class="project_body">
        <div id="waveform"></div>
        <input type="button" class="wave_btn" id="btn_play" value="play" disabled="disabled"/>
        <input type="button" class="wave_btn" id="btn_pause" value="Pause" disabled="disabled"/>
        <input type="button" class="wave_btn" id="btn_stop" value="stop" disabled="disabled"/>
    </div>
    <%= render 'shared/footer' unless @disable_nav %>

</div>
