<div class="project_container">
  <div class="pjbanner">
    <div class="go-back">
      <%= link_to projects_path , class: "backtoprojectarrow" do %>
        <i class="fas fa-arrow-left" id="backtoprojects"></i>
      <% end %>
    </div>
    <div class="title-box">
      <h2><%= @project.title %></h2>
    </div>
  </div>
  <div class="pj-body">
    <div class="instrumental">
        <div class="voice-record">
          <% if @project.voice_records.first %>
            <% @project.voice_records.each do |vr| %>
              <% vrc = cloudinary_url(vr.voice.key, :resource_type=>"video") %>
              <%= audio_tag vrc, data: { start: vr.starting_time, end: vr.ending_time }, class: "voices" %>
            <%end%>
          <%end%>
        </div>
      <div class="wavebody">
        <% if @project.song.attached? %>
          <% instru = cloudinary_url(@project.song.key, :resource_type=>"video") %>
        <% else %>
          <%= simple_form_for @project, html: {id: :'form-submit-instru'}, remote: true do |f| %>
          <i class="fas fa-cloud-upload-alt"></i>
              <%= f.input :song, as: :file, input_html: {id:"instru", class:"up-instru"}, label:"..", label_html: {id:"label-inst"} %>
          <% end %>
        <%end%>
        <div id="waveform" data-instru="<%= instru %>">
        </div>
        <div class="lecture">

          <button class="button_pp wave_btn" id="btn_play" data-playing="false">
         <i id="play-icon" class="fas fa-play"></i>
          </button>
          <button class="btn_stop wave_stop" data-playing="false" id="btn_stop">
            <i class="fas fa-stop"></i>
          </button>
        </div>
      </div>
    </div>
    <div class="textarea">
      <textarea class="form-control text optional" id="notes" rows="24" cols="33" data-token="<%= form_authenticity_token %>" ><%= @project.note.content.strip %></textarea>
    </div>
  </div>
  <div class="vr-index">
    <% @voicerecords.order(created_at: :desc).each do |vr| %>
      <div class="vr-card">
        <div class="vr-title">
          <h4><%= vr.title %></h4>
          <p><%= vr.starting_time %></p>
        </div>
        <div class="vr-switch">
          <div class="switch-container">
            <label for="switch" class="switch-label">

              <div data-voiceid="<%= vr.id %>" data-voicetoken="<%= form_authenticity_token %>" class="switch-rail" style="background-color: <%= vr.enabled ? "purple" : "black" %>">
                <div class="switch-slider <%= vr.enabled ? "" : "slide" %>">
                </div>
              </div>
            </label>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= render 'shared/footer' unless @disable_nav %>
</div>
