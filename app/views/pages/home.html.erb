<div class="biggy-small">
  <% if user_signed_in? %>
    <div class="logged-btn">
      <%= link_to projects_path, class: "index-btn" do %>
        <h3>My projects</h3>
      <% end %>
      <%= link_to "/projects/#{Project.order(updated_at: :desc).first.id}", class: "index-btn" do %>
        <h3><%= Project.order(updated_at: :desc).first.title %></h3>
      <% end %>
    </div>
    <div class="sign-out">
      <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fas fa-power-off"></i><h2>Sign out</h2>
      <% end %>
    </div>
  <% else %>
    <section>
      <%= link_to "LOG IN", new_user_session_path, class: "login-btn"%>
      <a class="signup-btn" href="/users/sign_up">or <strong>Sign Up</strong></a>
    </section>
  <% end %>
</div>
