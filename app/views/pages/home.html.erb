<div class="biggy-container">
  <% if user_signed_in? %>
    <div class="logged-btn">
      <%= link_to projects_path, class: "index-btn" do %>
        <h3>My projects</h3>
      <% end %>
      <%= link_to projects_path, class: "index-btn" do %>
        <h3>Another btn</h3>
      <% end %>
    </div>
    <div class="sign-out">
      <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fas fa-power-off"></i><h2>Sign out</h2>
      <% end %>
    </div>
  <% else %>
    <section>
      <home-form action="sign in">
        <label for="">Sign In</label>
        <input type="email" class="user" placeholder="Email address">
        <div class="password">
          <input type="text" class="user" placeholder="Password">
          <p>Forgot your Password?</p>
        </div>
        <button>
          <svg width="180px" height="60px" viewBox="0 0 180 60" class="border">
          <polyline points="179,1 179,59 1,59 1,1 179,1" class="bg-line" />
          <polyline points="179,1 179,59 1,59 1,1 179,1" class="hl-line" />
          </svg>
          <span>Log In</span>
        </button>
      </form>
      <a class="home-btn" href="#">or <strong>Sign Up</strong></a>
    </section>
  <% end %>
</div>
